generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmployeePay {
  id                String   @id @default(uuid())
  employeeId        String
  name              String
  designation       String
  department        String
  dateOfJoining     DateTime
  basicSalary       Float
  hra               Float
  otherAllowances   Float
  taxDeductions     Float
  pfDeductions      Float
  professionalTax   Float
  grossSalary       Float
  netSalary         Float
  bankAccountNumber String
  ifscCode          String
  payDate           DateTime
  emailId           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
